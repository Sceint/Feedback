<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.admin.feedback.MainActivity">

    <TextView
        android:text="Occupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_below="@+id/editText9"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="28dp" />

    <TextView
        android:text="Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/editText5"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course : Btech"
        android:id="@+id/textview1"
        android:fontFamily="sans-serif"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="38dp" />

    <TextView
        android:text="Branch"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:id="@+id/textView3"
        android:layout_above="@+id/spinner4"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:layout_width="120dp"
        android:layout_marginEnd="47dp"
        android:entries="@array/branch"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner4"
        android:entries="@array/branch1"

        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/spinner3" />

    <TextView
        android:text="Parent Name"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/textview1"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="194dp" />

    <TextView
        android:text="Class"
        android:layout_width="50dp"
        android:layout_height="wrap_content"


        android:id="@+id/textView4"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/editText5"
        android:layout_alignStart="@+id/textView3" />

    <Button
        android:text="REGISTER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:onClick="gotoFeedback1Page"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/branch2"
        android:id="@+id/spinner2"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/spinner4" />

    <EditText
        android:id="@+id/editText9"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/editText5"
        android:ems="10"
        android:hint="enter the age"
        android:inputType="number" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:hint="enter name(OPTIONAL)"
        android:inputType="textPersonName" />


</RelativeLayout>




